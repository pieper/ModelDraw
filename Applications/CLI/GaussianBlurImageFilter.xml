  <parameters>
    <double>
      <name>sigma</name>
      <longflag>sigma</longflag>
      <flag>s</flag>
      <label>Sigma</label>
      <description>Sigma value in physical units (e.g., mm) of the Gaussian kernel</description>
      <default>1.0</default>
    </double>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume</description>
    </image>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>1</index>
      <description>Blurred Volume</description>
    </image>
  </parameters>

</executable>
